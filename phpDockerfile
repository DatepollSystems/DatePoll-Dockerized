FROM php:7.4-fpm

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    default-mysql-client \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    libmagickwand-dev \
    libzip-dev \
    libonig-dev \
    locales \
    zip \
    unzip \
    git \
    supervisor \
    jpegoptim optipng pngquant gifsicle

RUN docker-php-ext-install pdo pdo_mysql mbstring zip exif pcntl bcmath opcache

# Use the default production configuration
RUN mv "$PHP_INI_DIR/php.ini-production" "$PHP_INI_DIR/php.ini"

# Override with custom opcache settings
COPY config/phpcustom.ini $PHP_INI_DIR/conf.d/

# Installing composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

WORKDIR /backend

RUN chown -R www-data:www-data /backend/ && chmod -R 777 /backend/

COPY ./config/supervisord.conf /etc/supervisor
